---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Card from "../components/Card.astro";
---

<Layout title="pagina copia de xbox">
	<header
		class="container max-w-15xl mx-auto bg-white h-14 flex items-center"
	>
		<nav class="optionsBar space-x-6 flex">
			<img
				class="h-6"
				src="https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RE1Mu3b?ver=5c31"
			/>
			<div class="w-[2px] h-6 bg-slate-800"></div>
			<img class="h-6" src="/xbox.png" />
		</nav>
		<nav class="menu">
			<div class="flex items-center">
				<a
					href="#"
					class="hover:underline underline-offset-8 decoration-2 flex ml-8"
					>Game Pass</a
				>
				<Icon name="mdi:chevron-down" class="mt-1 size-4" />
			</div>
		</nav>
	</header>
	<div class="video relative">
		<div class="absolute left-[5.5em] h-full justify-center items-left  flex flex-col ">
			<div class="bg-amber-300 w-[10em] text-[12px]">
				DISPONIBLE AHORA
			</div>
			<div class="text-white font-bold text-[4em]  w-[10em]">
				<h1>FINAL FANTASY XIV ONLINE</h1>
			</div>
			<div class="text-white text-[34px] w-[18.5em]">
				<h2>Disfruta de una aventura aclamada por la crítica en Xbox Series X|S.</h2>
			</div>
			<div class="bg-lime-400 w-[12em] font-bold p-[0.5em] m-[0.5em]">
				<a href="#">CONSÍGUELO AHORA</a>
			</div>
		</div>
		<video
			aria-label="Ambient video alt text"
			poster="https://assets.xboxservices.com/assets/45/5a/455a189b-0e7a-48bc-a966-9bf5ec8c08c2.jpg?n=896254_Page-Hero-1084_1920x720_01.jpg"
			muted=""
			autoplay=""
			loop=""
			alt="Video de FINAL FANTASY XIV Online con imágenes del juego y cinemáticas"
			><source
				class="heroImgDesktop"
				src="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
				type="video/mp4"
				srcset="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"/></video>

	</div>
	<div class="optiosBarMid bg-orange-950 h-20 items-center"></div>
	<div class="container">
		<div class="wrapper">
			<div class="box img1">img1</div>
			<div class="box img2">img2</div>
			<div class="box img3">img3</div>
			<div class="box img4">img4</div>
			<div class="box img5">img5</div>
			<div class="box img6">img6</div>
			<div class="box img7">img7</div>
			<div class="box img8">img8</div>
			<div class="box img9">img9</div>
			<div class="box img10">img10</div>
		</div>
	</div>
</Layout>

<style>
	.wrapper {
		display: grid;
		grid-template-rows: 120px 120px 120px 120px;
		grid-template-areas:
			"img1 img1 img2 img3"
			"img1 img1 img6 img6"
			"img4 img5 img6 img6"
			"img7 img8 img9 img10";
	}

	.img1 {
		grid-area: img1;
		background: orange;
	}
	.img2 {
		grid-area: img2;
		background: rgb(14, 189, 93);
	}
	.img3 {
		grid-area: img3;
		background: rgb(145, 11, 111);
	}
	.img4 {
		grid-area: img4;
		background: rgb(0, 217, 255);
	}
	.img5 {
		grid-area: img5;
		background: rgb(47, 180, 64);
	}
	.img6 {
		grid-area: img6;
		background: rgb(255, 115, 0);
	}
	.img7 {
		grid-area: img7;
		background: rgb(173, 51, 51);
	}
	.img8 {
		grid-area: img8;
		background: rgb(67, 86, 121);
	}
	.img9 {
		grid-area: img9;
		background: rgb(112, 62, 170);
	}
	.img10 {
		grid-area: img10;
		background: rgb(225, 228, 47);
	}
</style>
