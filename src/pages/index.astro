<Layout title="pagina copia de xbox">
	<header
		class="container max-w-15xl pl-20 bg-white h-14 flex justify-center items-center"
	>
		<div class="flex justify-center">
			<nav class="optionsBar space-x-6 flex">
				<img
					class="h-6"
					src="https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RE1Mu3b?ver=5c31"
				/>
				<div class="w-[2px] h-6 bg-slate-800"></div>
				<img class="h-6" src="/xbox.png" />
			</nav>+
			<nav class="menu">
				<div class="flex text-[13px]">
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Game Pass</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Juegos</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Dispositivos</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Comunidad</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Soporte técnico</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Mi Xbox</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Desarrolladores</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
				</div>
				<div class="flex text-[13px]">
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Todo Microsoft</a
					>
					<Icon name="mdi:chevron-down" class="mt-1 size-4" />
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Buscar</a
					>
					<Icon
						name="ph:magnifying-glass-thin"
						class="scale-x-[-1] size-5 ml-4"
						href="#"
					/>
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Carro</a
					>
					<Icon
						name="ph:shopping-cart"
						class="size-[18px] ml-[10px]"
						href="#"
					/>
					<a
						href="#"
						class="hover:underline underline-offset-8 decoration-2 flex ml-8"
						>Iniciar sesión</a
					>
					<Icon
						name="mdi:account-circle-outline"
						class="size-[30px]"
					/>
				</div>
			</nav>
		</div>
	</header>
	<div class="video relative">
		<div
			class="absolute left-[5.5em] h-full justify-center items-left flex flex-col"
		>
			<div class="bg-amber-300 w-[10em] text-[12px]">
				DISPONIBLE AHORA
			</div>
			<div class="text-white font-bold text-[4em] w-[10em]">
				<h1>FINAL FANTASY XIV ONLINE</h1>
			</div>
			<div class="text-white text-[34px] w-[18.5em]">
				<h2>
					Disfruta de una aventura aclamada por la crítica en Xbox
					Series X|S.
				</h2>
			</div>
			<div class="bg-lime-400 w-[12em] font-bold p-[0.5em] m-[0.5em]">
				<a href="#">CONSÍGUELO AHORA</a>
			</div>
		</div>
		<video
			aria-label="Ambient video alt text"
			poster="https://assets.xboxservices.com/assets/45/5a/455a189b-0e7a-48bc-a966-9bf5ec8c08c2.jpg?n=896254_Page-Hero-1084_1920x720_01.jpg"
			muted=""
			autoplay=""
			loop=""
			alt="Video de FINAL FANTASY XIV Online con imágenes del juego y cinemáticas"
			><source
				class="heroImgDesktop"
				src="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
				type="video/mp4"
				srcset="https://assets.xboxservices.com/assets/12/ff/12ff90f8-439f-42a6-892b-1bf80f02f027.mp4?n=FFXIV-Online_HP-Video_1920x720_04.mp4"
			/></video
		>
	</div>
	<div class="optiosBarMid bg-orange-950 h-20 items-center"></div>
	<div>
		<div class="wrapper p-2">
			<div class="box img1"></div>
			<div class="box img2"></div>
			<div class="box img3"></div>
			<div class="box img4"></div>
			<div class="box img5"></div>
			<div class="box img6"></div>
			<div class="box img7"></div>
			<div class="box img8"></div>
			<div class="box img9"></div>
			<div class="box img10"></div>
		</div>
	</div>
</Layout>

<style>
	.wrapper {
		display: grid;
		grid-template-rows: 30rem 30rem 30rem 30rem;
		width: 100%;
		grid-gap: 4px 4px;

		grid-template-areas:
			"img1 img1 img2 img3"
			"img1 img1 img6 img6"
			"img4 img5 img6 img6"
			"img7 img8 img9 img10";
	}

	.img1 {
		grid-area: img1;

		background-image: url(https://image.api.playstation.com/vulcan/ap/rnd/202211/2219/kMzn6YLwGuOQl1jNRug7AUra.png);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img2 {
		grid-area: img2;
		background: rgb(14, 189, 93);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img3 {
		grid-area: img3;

		background-image: url(https://assets.xboxservices.com/assets/a0/b4/a0b4f039-0d89-48d8-afb2-05a7411b6ee6.jpg?n=Forza-Motorsport_GLP-Page-Hero-0_1083x1222_02.jpg);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img4 {
		grid-area: img4;
		background: rgb(0, 217, 255);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img5 {
		grid-area: img5;
		background: rgb(47, 180, 64);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img6 {
		grid-area: img6;
		background-image: url(https://assets.xboxservices.com/assets/2c/74/2c740ac2-9d1c-4c5c-9f92-617a761a7bc5.jpg?n=284993_Accessories-Hub_Page-Hero-1084_1920x720.jpg);
		background-position-x: right;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img7 {
		grid-area: img7;
		background: rgb(173, 51, 51);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img8 {
		grid-area: img8;
		background: rgb(67, 86, 121);
		background-position: center;
		background-repeat: no-repeat;
		background-size: auto;
	}
	.img9 {
		grid-area: img9;
		background: rgb(112, 62, 170);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	.img10 {
		grid-area: img10;
		background-image: url(https://wallpapers-clan.com/wp-content/uploads/2023/12/halo-master-chief-in-helmet-desktop-wallpaper-cover.jpg);
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
</style>
